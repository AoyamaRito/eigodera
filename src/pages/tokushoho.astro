// AI-First開発原則：完全自己完結
const companyInfo = {
  name: "株式会社ソリスト合唱団",
  representative: "沖井広行",
  address: "東京都立川市若葉町4-5-10",
  phone: "070-4036-4649",
  email: "okinoi@sorisuto.page",
  service: "英語の駆け込み寺",
  price: "月額5,000円〜（税込）",
  payment: "クレジットカード決済（Stripe）"
};
---

<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>特定商取引法に基づく表記 - {companyInfo.service}</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    :root {
      --navy: #0F1B3C;
      --light-navy: #1A2847;
      --pale-navy: #2C3E5C;
      --silver: #C0C0C0;
      --light-silver: #E8E8E8;
      --copper-light: #FFB380;
      --copper-dark: #D35400;
      --white: #FFFFFF;
      --off-white: #F8F9FA;
      --text-gray: #6C757D;
    }
    
    body {
      font-family: "Helvetica Neue", "游ゴシック", YuGothic, sans-serif;
      background: var(--white);
      color: var(--navy);
      line-height: 1.8;
      position: relative;
    }
    
    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: var(--white);
      z-index: -1;
    }
    
    .container {
      max-width: 480px;
      margin: 0 auto;
      padding: 20px;
    }
    
    /* ヘッダー */
    .header-wrapper {
      background: var(--white);
      margin-bottom: 30px;
    }
    
    .header {
      max-width: 480px;
      margin: 0 auto;
      background: var(--navy);
      color: var(--white);
      padding: 30px 20px;
      text-align: center;
      position: relative;
      overflow: hidden;
    }
    
    .header::before {
      content: '';
      position: absolute;
      top: -50%;
      right: -50%;
      width: 200%;
      height: 200%;
      background: radial-gradient(circle, rgba(255, 179, 128, 0.1) 0%, transparent 70%);
    }
    
    .header h1 {
      font-size: 22px;
      font-weight: 300;
      letter-spacing: 0.05em;
      position: relative;
      z-index: 1;
    }
    
    .back-link {
      display: inline-block;
      margin-top: 15px;
      padding: 8px 20px;
      background: rgba(255, 179, 128, 0.2);
      color: var(--copper-light);
      text-decoration: none;
      font-size: 14px;
      border-radius: 0;
      transition: all 0.3s;
      position: relative;
      z-index: 1;
    }
    
    .back-link:hover {
      background: rgba(255, 179, 128, 0.3);
      transform: translateY(-1px);
    }
    
    /* メインコンテンツ */
    .content {
      background: var(--white);
      border: 2px solid var(--navy);
      padding: 20px;
      border-radius: 0;
    }
    
    .section {
      margin-bottom: 30px;
    }
    
    .section:last-child {
      margin-bottom: 0;
    }
    
    .section-title {
      font-size: 17px;
      font-weight: 600;
      color: var(--navy);
      margin-bottom: 10px;
      padding-left: 15px;
      position: relative;
    }
    
    .section-title::before {
      content: '';
      position: absolute;
      left: 0;
      top: 50%;
      transform: translateY(-50%);
      width: 4px;
      height: 20px;
      background: var(--copper-dark);
    }
    
    .section-content {
      color: var(--text-gray);
      padding-left: 15px;
      font-size: 14px;
      line-height: 1.7;
    }
    
    /* テーブルスタイル */
    .info-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
    }
    
    .info-table th,
    .info-table td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid var(--light-silver);
      font-size: 14px;
    }
    
    .info-table th {
      background: var(--off-white);
      color: var(--navy);
      font-weight: 600;
      width: 35%;
      font-size: 13px;
    }
    
    .info-table td {
      color: var(--text-gray);
    }
    
    /* モバイル最適化 */
    @media (max-width: 480px) {
      .content {
        padding: 15px;
        border-width: 1px;
      }
      
      .info-table {
        margin-top: 10px;
      }
      
      .info-table th,
      .info-table td {
        padding: 10px 8px;
        font-size: 13px;
      }
      
      .info-table th {
        width: 100px;
        font-size: 12px;
      }
      
      .section-title {
        font-size: 16px;
      }
      
      .section-content {
        font-size: 13px;
      }
    }
    
    /* PC用の装飾線 */
    @media (min-width: 1000px) {
      body::before,
      body::after {
        content: '';
        position: fixed;
        top: 0;
        bottom: 0;
        width: 6px;
        background: transparent;
        border-left: 6px dashed var(--navy);
        opacity: 0.6;
        z-index: 10;
      }
      
      body::before {
        left: calc(50% - 500px);
      }
      
      body::after {
        right: calc(50% - 500px);
      }
    }
  </style>
</head>
<body>
  <div class="header-wrapper">
    <div class="header">
      <h1>特定商取引法に基づく表記</h1>
      <a href="/" class="back-link">← トップページに戻る</a>
    </div>
  </div>
  
  <div class="container">
    <div class="content">
      <table class="info-table">
        <tr>
          <th>販売業者</th>
          <td>{companyInfo.name}</td>
        </tr>
        <tr>
          <th>運営責任者</th>
          <td>{companyInfo.representative}</td>
        </tr>
        <tr>
          <th>所在地</th>
          <td>{companyInfo.address}</td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td>{companyInfo.phone}</td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td>{companyInfo.email}</td>
        </tr>
        <tr>
          <th>サービス名</th>
          <td>{companyInfo.service}</td>
        </tr>
        <tr>
          <th>販売価格</th>
          <td>{companyInfo.price}<br>
            ※コース内容により異なります<br>
            ※1週間の無料体験あり</td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td>{companyInfo.payment}</td>
        </tr>
        <tr>
          <th>サービス提供時期</th>
          <td>お申込み後、即時利用開始可能です。</td>
        </tr>
        <tr>
          <th>返品・キャンセル</th>
          <td>
            サービスの性質上、返品・返金はお受けしておりません。<br>
            無料体験期間中（7日間）はいつでもキャンセル可能です。<br>
            月額会員の解約は、次回更新日の3日前までにお手続きください。
          </td>
        </tr>
        <tr>
          <th>動作環境</th>
          <td>
            【PC】Windows 10以降、macOS 10.14以降<br>
            【スマートフォン】iOS 13以降、Android 8.0以降<br>
            【推奨ブラウザ】Chrome、Safari、Firefox、Edge（最新版）<br>
            ※Webブラウザ上で動作します
          </td>
        </tr>
      </table>
      
      <div class="section" style="margin-top: 40px;">
        <h2 class="section-title">個人情報の取り扱いについて</h2>
        <div class="section-content">
          お客様からお預かりした個人情報は、当社プライバシーポリシーに従い適切に管理いたします。<br>
          詳細は<a href="#" style="color: var(--copper-dark);">プライバシーポリシー</a>をご確認ください。
        </div>
      </div>
      
      <div class="section">
        <h2 class="section-title">その他</h2>
        <div class="section-content">
          本サービスは、AIを活用したオンライン英語学習サービスです。<br>
          Webブラウザ上で全ての機能をご利用いただけます。<br>
          当サービスは、特定商取引法、その他関係法令を遵守して運営しております。<br>
          ご不明な点がございましたら、お気軽にお問い合わせください。
        </div>
      </div>
    </div>
  </div>
</body>
</html>